<div class="table" data-controller="drag">
  <div class="board">
    <% 15.times do %>
      <div class="row">
        <% 15.times do %>
          <div class="square" data-action="drop->drag#drop dragover->drag#allowDrop"></div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="tile-rack">
    <% 7.times do |index| %>
      <div class="tile" id="tile-<%= index %>" draggable="true" data-action="dragstart->drag#setTransferData"></div>
    <% end %>
  </div>
</div>
